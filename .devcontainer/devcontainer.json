{
    "name": "ROS 2 Development Container",
    "privileged": true,
    "remoteUser": "ben",
    "dockerComposeFile": "./docker-compose.yml",
    "service": "ros2-dev-env",

    "workspaceFolder": "/home/ws",
    "containerEnv": {
        "DISPLAY": "unix:0",
        "ROS_AUTOMATIC_DISCOVERY_RANGE": "LOCALHOST",
        "ROS_DOMAIN_ID": "42"
    },
    "mounts": [
        "source=${localWorkspaceFolder},target=/home/ws,type=bind",
        "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind,consistency=cached",
        "source=/dev/dri,target=/dev/dri,type=bind,consistency=cached",
        // "source=${localWorkspaceFolder}/cache/humble/build,target=/home/ws/build,type=bind",
        // "source=${localWorkspaceFolder}/cache/humble/install,target=/home/ws/install,type=bind",
        // "source=${localWorkspaceFolder}/cache/humble/log,target=/home/ws/log,type=bind",
    ],
    "postCreateCommand": "sudo rosdep update && sudo rosdep install --from-paths src --ignore-src -y && sudo chown -R $(whoami) /home/ws/",
    "initializeCommand": "mkdir -p cache/humble/build cache/humble/install cache/humble/log",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-azuretools.vscode-docker",
                "ms-python.vscode-pylance",
                "ms-python.python",
                "ms-python.debugpy",
                "ms-python.mypy-type-checker",
                "ms-vscode.hexeditor",
                "ms-python.flake8",
                "ms-python.black-formatter",
                "tamasfe.even-better-toml",
                "mechatroner.rainbow-csv"
            ]
        }
    }
}